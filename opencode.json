{
  "$schema": "https://opencode.ai/schemas/config.json",
  "description": "OpenCode Personal - Skills, agents, and commands configuration",
  "version": "2.0.0",
  "note": "Git workflow skills (branch, commit, push, create-pr) removed - OpenCode handles these natively",
  "skills": {
    "location": ".opencode/skill",
    "available": [
      {
        "name": "team-review",
        "description": "Review code for team standards",
        "path": ".opencode/skill/team-review/SKILL.md"
      },
      {
        "name": "deploy-check",
        "description": "Pre-deployment checklist",
        "path": ".opencode/skill/deploy-check/SKILL.md"
      },
      {
        "name": "security-audit",
        "description": "Security vulnerability scanning",
        "path": ".opencode/skill/security-audit/SKILL.md"
      }
    ],
    "native_git_support": {
      "note": "OpenCode has built-in support for git workflows. Use natural language instead of custom skills:",
      "examples": [
        "\"commit my changes with a good message\" - Creates smart commits",
        "\"push this to remote\" - Pushes with tracking",
        "\"create a PR for these changes\" - Creates PR with description",
        "\"create a feature branch\" - Creates and switches to new branch"
      ]
    }
  },
  "agents": {
    "location": ".opencode/agent",
    "available": [
      {
        "name": "code-reviewer",
        "description": "Specialized code review agent",
        "path": ".opencode/agent/code-reviewer.md"
      },
      {
        "name": "test-writer",
        "description": "Test generation agent",
        "path": ".opencode/agent/test-writer.md"
      }
    ]
  },
  "commands": {
    "location": ".opencode/command",
    "available": [
      {
        "name": "review",
        "description": "Quick code review",
        "path": ".opencode/command/review.md"
      },
      {
        "name": "test",
        "description": "Run tests with analysis",
        "path": ".opencode/command/test.md"
      }
    ]
  },
  "installation": {
    "recommended": "~/.config/opencode",
    "alternative": "~/.opencode",
    "script": "./install-skills.sh"
  },
  "verification": {
    "script": "./VERIFICATION-GUIDE.sh"
  },
  "metadata": {
    "repository": "https://github.com/joyep-tzt/OpenCode.Personal",
    "author": "joyep-tzt",
    "license": "MIT",
    "created": "2026-01-16",
    "updated": "2026-01-16"
  }
}
